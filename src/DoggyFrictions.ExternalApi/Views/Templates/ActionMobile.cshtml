<script type="text/html" id="action-mobile-template">
    <div class="action mobile" data-bind="css: {'is-edit': $root.IsEdit(), 'is-preview': !$root.IsEdit()}">
        <div class="jumbotron">
            <div class="page-head">
                @await Html.PartialAsync("NavigationBar")
            </div>
            <div>
                <!-- ko if: !$root.IsEdit() -->
                <p data-bind="text: ($root.Description() || '')" style="display: inline;"></p>
                <a class="btn btn-primary" data-bind="attr: {href: '#/Session/' + Session.Id + '/Action/Edit/' + Id}" style="padding: 3px 10px;">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a class="btn btn-primary" data-bind="ifConfirmed: Delete, cdTitle: 'Удаление чека', cdMessage: 'Вы уверены, что ходите удалить чек \'' + Description() + '\'?'" style="padding: 3px 10px;">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
                <!-- /ko -->

                <div class="form">
                    <div class="content">
                        <div class="sum-block">
                            <!-- ko if: $root.IsEdit() -->
                            <span>
                                <input type="text" class="form-control" data-bind="value: $root.Description, attr: {tabindex: window.App.GlobalId.Next()}">
                            </span>
                            <!-- /ko -->
                        </div>
                        <div class="consumers-block">
                            <label style="min-width: 80px;">Платил:</label>
                            <!-- ko if: $root.IsEdit() -->
                            <span>
                                <select class="form-control" data-bind="options: $root.Session.Participants,
                                    optionsText: 'Name', optionsValue: 'Id', value: $root.PayerId, attr: {tabindex: window.App.GlobalId.Next() + 1000}"></select>
                            </span>
                            <!-- /ko -->
                            <!-- ko if: !$root.IsEdit() -->
                            <span data-bind="text: $root.Session.GetParticipant($root.PayerId()).Name()"></span>
                            <!-- /ko -->
                        </div>  
                        <div class="sum-block">
                            <div class="amount-block">
                                <label style="min-width: 80px;">Сумма:</label>
                                <!-- ko if: $root.IsEdit() -->
                                <div class="form-group">
                                    <input type="text" class="form-control" data-bind="money: $root.Amount, attr: {tabindex: window.App.GlobalId.Next() + 10}" placeholder="Сумма">
                                </div>
                                <!-- /ko -->
                                <!-- ko if: !$root.IsEdit() -->
                                <span data-bind="text: Amount().formatMoney()"></span>
                                <!-- /ko -->
                            </div>
                        </div>
                        <div class="consumers-block">
                            <label>Делим на:</label>
                            <!-- ko foreach: Consumers -->
                            <!-- ko if: $root.IsEdit() || IsActive() -->
                            <span class="consumer-sum-edit-span" styles="w">
                                <!-- ko if: $root.IsEdit() -->
                                <span class="checkbox" style="margin: 5px 0px 5px 10px;">
                                    <label><input type="checkbox" data-bind="checked: IsActive" tabindex="-1" /></label>
                                </span>
                                <!-- /ko -->
                                <!-- ko if: !$root.IsEdit() -->
                                <label style="margin: 0px 0px 5px 10px;">✓</label>
                                <!-- /ko -->
                                <div data-bind="text: ParticipantName + ': '" style="margin: 0px 0px 0px 10px; min-width: 60px; display: inline-block;"></div>
                                <b data-bind="text: Amount().formatMoney()"></b>
                            </span>
                            <!-- /ko -->
                            <!-- /ko -->
                        </div>       
                    </div>

                    <div class="confirm-buttons">
                        <!-- ko if: $root.IsEdit() -->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary btn-raised" data-bind="click: Save">
                                <span class="glyphicon glyphicon-floppy-save"></span> Сохранить
                            </button>
                            <button type="button" class="btn btn-primary" data-bind="ifConfirmed: window.App.Functions.Move(Navigation.Back().Url),
                            cdTitle: 'Отмена изменений', cdMessage: 'Изменения не будут сохранены. Вы уверены, что хотите покинуть страницу?' ">
                                Отмена
                            </button>
                        </div>
                        <!-- /ko -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
