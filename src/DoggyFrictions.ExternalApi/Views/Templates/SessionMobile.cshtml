<script type="text/html" id="session-mobile-template">
    <div class="session mobile" data-bind="css: {'is-edit': $root.IsEdit(), 'is-preview': !$root.IsEdit()}">
        <div class="jumbotron">
            <div class="page-head">
                @await Html.PartialAsync("NavigationBar")
            </div>

            <div>
                <p data-bind="text: Name" style="display: inline;"></p>
                <a class="btn btn-primary" data-bind="attr: {href: '#/Session/Edit/' + Id}" style="padding: 3px 10px;">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a class="btn btn-primary" data-bind="ifConfirmed: Delete, cdTitle: 'Удаление тёрки', cdMessage: 'Вы уверены, что ходите удалить тёрку \'' + Name() + '\'?'" style="padding: 3px 10px;">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </div>
            <a class="btn btn-primary" data-bind="attr: {href: '#/Session/' + Id + '/Action/Create'}"><span class="glyphicon glyphicon-plus"></span> Внести чек</a>
            <a class="btn btn-primary" data-bind="attr: {href: '#/Session/' + Id + '/Debts'}"><span class="glyphicon glyphicon-transfer"></span>  Пояснить за долги</a>

            <!-- ko if: !Actions.IsLoading() -->
            <div data-bind="with: Actions">
                @await Html.PartialAsync("Pages")
            </div>
            <!-- /ko -->
            <div class="loading-screen-small" data-bind="if: Actions.IsLoading()">
                <img src='@Url.Content("../../img/runningdog_transparent.gif")' alt="Загрузка . . .">
            </div>
            <!-- ko if: !Actions.IsLoading() -->
            <div data-bind="with: Actions">
                <span data-bind="if: !Rows().length">Пока всё тихо</span>
                <!-- ko foreach: Rows -->
                <div class="item-block">
                    <div class="actions">
                        <a class="btn btn-primary" data-bind="attr: {href: '#/Session/' + Session.Id + '/Action/Edit/' + Id}"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a class="btn btn-primary" data-bind="ifConfirmed: Delete, cdTitle: 'Удаление чека', cdMessage: 'Вы уверены, что ходите удалить чек \'' + Description() + '\'?'"><span class="glyphicon glyphicon-trash"></span></a>
                    </div>
                    <div class="content" data-bind="click: window.App.Functions.Move('#/Session/' + Session.Id + '/Action/' + Id)">
                        <div class="amount-block">
                            <div><label data-bind="text: Description()"></label></div>
                            <span data-bind="text: `${Amount().formatMoney()} (${PayerName()})`"></span>
                        </div>
                    </div>
                </div>
                <!-- /ko -->
            </div>
            <!-- /ko -->
            <!-- ko if: !Actions.IsLoading() -->
            <div data-bind="with: Actions">
                @await Html.PartialAsync("Pages")
            </div>
            <!-- /ko -->
        </div>
    </div>
</script>
